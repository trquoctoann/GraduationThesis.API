<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="20240305230900-1" author="trquoctoan">
        <createTable tableName="option">
            <column name="id" type="bigint" autoIncrement="true" >
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(30)">
                <constraints nullable="false"/>
            </column>
            <column name="code" type="varchar(10)">
                <constraints unique="true" nullable="false" uniqueConstraintName="unique_option_code"/>
            </column>
            <column name="status" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="is_multi" type="boolean"/>
            <column name="is_required" type="boolean"/>
            <column name="created_by" type="varchar(50)"/>
            <column name="created_date" type="datetime"/>
            <column name="last_modified_by" type="varchar(50)"/>
            <column name="last_modified_date" type="datetime"/>
        </createTable>
    </changeSet>
</databaseChangeLog>
